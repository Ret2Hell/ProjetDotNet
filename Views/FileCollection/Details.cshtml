@model ProjetDotNet.Models.FileCollectionModel

@{
    ViewData["Title"] = "File Collection Details";
}

<h1>@ViewData["Title"]</h1>

<div class="card mb-4">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <p><strong>Description:</strong> @Model.Description</p>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning btn-sm">Edit</a>
            <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger btn-sm">Delete</a>
        </div>
    </div>
</div>

<h3>Files in this Collection</h3>
<ul class="list-group">
    @foreach (var file in Model.Files)
    {
        <li class="list-group-item">@file.FileName</li>
    }
</ul>

<a href="@Url.Action("AddFileToCollection", new { collectionId = Model.Id, fileId = 1 })" class="btn btn-primary mt-3">Add File</a> <!-- Example link to add file -->
