@model ProjetDotNet.Models.FileCollectionModel

@{
    ViewData["Title"] = "Create File Collection";
}

<h1>a</h1>

<form asp-action="Create" method="post" class="mt-4">
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea class="form-control" id="Description" name="Description" required>@Model.Description</textarea>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>

<a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Back to File Collections</a>
